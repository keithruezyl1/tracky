<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="ic_launcher_background">#00000000</color>
    <string name="app_name">Tracky</string>
    <style name="Theme.Tracky" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="Theme.Tracky.Starting" parent="Theme.Tracky">
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/tracky_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
    </style>
</resources>