<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="Theme.Tracky" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Tracky.Starting" parent="Theme.Tracky">
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/tracky_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
    </style>
</resources>
